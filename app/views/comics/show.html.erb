<% content_for(:title) do %>
<%= @comic.title %>
<% end %>



<div class="wrapper ">
  <div class="text-center">
    <div class="container" >
      <div class="row ">
        <div class="col-xs-12 ">
          <h1 class="adaptation"><%= @comic.title %> <%= link_to comic_path(@comic),
            method: :delete,
            data: { confirm: "Une bÃ©dÃ© de Bachibouzouk?" } do%>
            <i class="fa fa-trash-o"></i>
            <%end%>
            <%= link_to  edit_comic_path(@comic) do  %>
            <i class="fa fa-pencil"></i>
            <%end%>
          </h1>
        </div>
        <div class="col-xs-12">
          <% if @comic.photo?%>
          <%= image_tag @comic.photo.url(:standard) %>
          <%end%>
        </div>
      </div>
    </div>
  </div>

  <hr>


  <hr>
  <div class="container">
    <div class="row ">
      <div class="col-xs-12 col-sm-6" id= "review">
       <%= simple_form_for [@comic, @comic_review] do |f| %>
       <%= f.input :comment ,input_html: { class: 'mannequin',id: "contenu" }%>
       <%= f.submit "How was it??", class: "btn-yours2" %>
       <% end %>
     </div>
     <div class="col-xs-12 col-sm-6 review" >
       <% if @comic.comic_reviews != []%>
       <h2>Readers have said:</h2>
       <ul>
        <% @comic.comic_reviews.each do |review| %>
        <li><p><%= review.comment %></p></li>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>
</div>
</div>
